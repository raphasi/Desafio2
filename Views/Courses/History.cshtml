@model IEnumerable<Students.Models.Course>
@{
    ViewBag.Title = "Histórico";
}
<h2>Histórico de Provas</h2>
<p>
    @Html.ActionLink("Adicionar Novo curso", "Create") |
    @Html.ActionLink("Cursos Futuross", "Upcoming") |
    @Html.ActionLink("Cursos em Andamento", "Index")
</p>

@if (Model.Count() > 0)
{
    <table style="width:100%">
        <tr>
            <th>
                Codigo
            </th>
            <th>
                Assunto
            </th>
            <th>
                Data Início
            </th>
            <th>
                Data Término
            </th>
            <th>
                Horário
            </th>
            <th>
                Valor
            </th>
            <th>
                Observações
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Code
                </td>
                <td>
                    @item.SubjectCode
                </td>
                <td>
                    @item.StartDate.ToString("dd-MM-yy")
                </td>
                <td>
                    @item.EndDate.Value.ToString("dd-MM-yy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Timing)
                </td>

                <td>
                    @item.CourseFee
                </td>
                <td>
                    @item.Remarks
                </td>

                <td style="text-align:center">
                    @Html.ActionLink("Alunos", "List", "Students", new { id = item.Code }, null)
                </td>
            </tr>
        }

    </table>
}
else
{
    <h3>Nenhum histórico de curso foi encontrado !</h3>
}
